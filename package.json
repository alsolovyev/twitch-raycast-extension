{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "twitch",
  "title": "Twitch",
  "description": "A Raycast extension for displaying information from Twitch.tv",
  "icon": "extension-icon.png",
  "author": "Aleksey Solovyev",
  "categories": [
    "Fun",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "followedChannels",
      "title": "Show Followed Channels",
      "description": "Shows information about followed channels",
      "mode": "view"
    },
    {
      "name": "searchChannels",
      "title": "Search Channels",
      "description": "Search Twitch channels by name or description",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "password",
      "default": "",
      "title": "Client ID",
      "required": true,
      "description": "Twitch Client ID - https://dev.twitch.tv/docs/api/get-started#register-an-application"
    },
    {
      "name": "authToken",
      "type": "password",
      "default": "",
      "title": "Authorization Token",
      "required": true,
      "description": "Twitch Bearer token (must be matching with Client ID) - https://dev.twitch.tv/docs/api/get-started#get-an-oauth-token"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@raycast/api": "^1.40.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^29.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^29.0.3",
    "nock": "^13.2.9",
    "prettier": "^2.5.1",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "init:hooks": "git config core.hooksPath .githooks",
    "test": "jest --collect-coverage"
  }
}
